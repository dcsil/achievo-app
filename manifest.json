{
  "name": "Achievo",
  "description": "A productivity extension to help you stay focused and achieve your goals.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["sidePanel", "notifications", "storage"],
  "background": {
    "service_worker": "frontend/utils/service_worker.js"
  },
  "side_panel": {
    "default_path": "frontend/src/pages/landing_page/landing.html"
  },
  "action": {
    "default_title": "Achievo",
    "default_icon": "frontend/src/assets/achievo_clap.png"
  },
  "icons": {
    "16": "frontend/src/assets/achievo_clap.png",
    "48": "frontend/src/assets/achievo_clap.png",
    "128": "frontend/src/assets/achievo_clap.png"
  }
}
